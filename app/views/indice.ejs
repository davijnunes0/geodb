<!DOCTYPE html>
<html lang="pt-BR" class="h-100">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
      crossorigin="anonymous"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/publico.css" />
    <title>Análise de Dados — GeoDB Cities</title>
  </head>
  <body class="analise-dados-body">
    <div class="analise-dados-container">
      <!-- Header Dashboard -->
      <header class="analise-header">
        <div class="d-flex flex-wrap justify-content-between align-items-center mb-3">
          <div>
            <h1 class="analise-titulo">
              <i class="bi bi-bar-chart-line-fill me-2"></i>
              Análise de Dados Geográficos
            </h1>
            <p class="analise-subtitulo mb-0">
              Clustering K-Means, coleta paralela e memória compartilhada
            </p>
          </div>
          <div id="shared-memory-status" class="analise-status-memoria">
            <i class="bi bi-memory"></i>
            <span id="memory-status-text">Verificando memória compartilhada...</span>
          </div>
        </div>

        <!-- KPIs -->
        <div class="row g-3 analise-kpis">
          <div class="col-6 col-lg">
            <div class="kpi-card">
              <div class="kpi-icon kpi-icon-explorar"><i class="bi bi-search"></i></div>
              <div class="kpi-conteudo">
                <span class="kpi-label">Explorar</span>
                <span class="kpi-valor">API GeoDB</span>
              </div>
            </div>
          </div>
          <div class="col-6 col-lg">
            <div class="kpi-card">
              <div class="kpi-icon kpi-icon-selecionar"><i class="bi bi-bookmark-check"></i></div>
              <div class="kpi-conteudo">
                <span class="kpi-label">Selecionadas</span>
                <span id="selected-count" class="kpi-valor">0</span>
              </div>
            </div>
          </div>
          <div class="col-6 col-lg">
            <div class="kpi-card">
              <div class="kpi-icon kpi-icon-coletar"><i class="bi bi-download"></i></div>
              <div class="kpi-conteudo">
                <span class="kpi-label">A Coletar</span>
                <span id="kpi-coletar" class="kpi-valor">5k</span>
              </div>
            </div>
          </div>
          <div class="col-6 col-lg">
            <div class="kpi-card">
              <div class="kpi-icon kpi-icon-clusters"><i class="bi bi-diagram-3"></i></div>
              <div class="kpi-conteudo">
                <span class="kpi-label">Clusters (k)</span>
                <span id="k-display" class="kpi-valor">5</span>
              </div>
            </div>
          </div>
          <div class="col-6 col-lg">
            <div class="kpi-card">
              <div class="kpi-icon kpi-icon-status"><i class="bi bi-cpu"></i></div>
              <div class="kpi-conteudo">
                <span class="kpi-label">Processamento</span>
                <span class="kpi-valor kpi-status">Paralelo</span>
              </div>
            </div>
          </div>
        </div>
      </header>

      <main class="analise-main">
        <!-- Painéis de Seleção -->
        <div class="row g-4">
          <div class="col-lg-6">
            <div class="analise-card analise-card-explorar">
              <div class="analise-card-header">
                <h4 class="mb-0"><i class="bi bi-search me-2"></i>Explorar Cidades</h4>
              </div>
              <div class="analise-card-body">
                <div id="error-box" role="alert"></div>
                <div id="cities-list" class="analise-lista" style="max-height: 420px; overflow-y: auto;"></div>
                <div class="d-flex justify-content-between align-items-center mt-3 pt-3 analise-paginacao">
                  <button id="button-previous" type="button" class="btn btn-analise-outline">
                    <i class="bi bi-chevron-left"></i> Anterior
                  </button>
                  <span id="current-page" class="text-muted fw-semibold">Página 1</span>
                  <button id="button-next" type="button" class="btn btn-analise-outline">
                    Próxima <i class="bi bi-chevron-right"></i>
                  </button>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="analise-card analise-card-selecionar">
              <div class="analise-card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0"><i class="bi bi-bookmark-check me-2"></i>Cidades Selecionadas</h4>
              </div>
              <div class="analise-card-body">
                <div id="selected-cities-list" style="max-height: 420px; overflow-y: auto;">
                  <div class="analise-empty-state">
                    <i class="bi bi-inbox"></i>
                    <p class="mb-0">Nenhuma cidade selecionada</p>
                    <small>Clique em "Selecionar Cidade" para adicionar</small>
                  </div>
                </div>
                <div id="selected-actions" class="mt-3 pt-3 border-top d-none">
                  <button id="clear-all-button" type="button" class="btn btn-analise-danger btn-sm w-100">
                    <i class="bi bi-trash"></i> Limpar Tudo
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Execução e Controles -->
        <div class="analise-card analise-card-execucao mt-4">
          <div class="analise-card-header">
            <h4 class="mb-0"><i class="bi bi-cpu me-2"></i>Execução</h4>
          </div>
          <div class="analise-card-body">
            <div class="row g-3 mb-4">
              <div class="col-md-3">
                <label for="cities-input" class="form-label fw-semibold"><i class="bi bi-geo-alt me-1"></i>Cidades a Coletar</label>
                <div class="input-group input-group-analise">
                  <input type="number" id="cities-input" class="form-control" min="100" max="50000" value="5000" step="500" />
                  <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    <i class="bi bi-lightning"></i>
                  </button>
                  <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="#" data-cities="1000">1.000 cidades</a></li>
                    <li><a class="dropdown-item" href="#" data-cities="2500">2.500 cidades</a></li>
                    <li><a class="dropdown-item" href="#" data-cities="5000">5.000 cidades</a></li>
                    <li><a class="dropdown-item" href="#" data-cities="10000">10.000 cidades</a></li>
                  </ul>
                </div>
                <small class="text-muted"><span id="time-estimate">~208 min</span> estimado</small>
                <span id="time-info" class="visually-hidden"></span>
              </div>
              <div class="col-md-3">
                <label for="k-input" class="form-label fw-semibold"><i class="bi bi-diagram-3 me-1"></i>Clusters (k)</label>
                <input type="number" id="k-input" class="form-control" min="2" max="50" value="5" />
              </div>
              <div class="col-md-6 d-flex align-items-end gap-2">
                <button id="start-collection-button" type="button" class="btn btn-analise-primary btn-lg">
                  <i class="bi bi-download"></i> Iniciar Coleta
                </button>
                <button id="start-clustering-button" type="button" class="btn btn-analise-secondary btn-lg" disabled>
                  <i class="bi bi-diagram-3"></i> Executar K-Means
                </button>
              </div>
            </div>
            <div id="progress-section" class="mb-4 d-none">
              <div class="d-flex justify-content-between mb-2">
                <span class="fw-semibold">Progresso</span>
                <span id="progress-text" class="text-muted">0%</span>
              </div>
              <div class="progress analise-progress">
                <div id="progress-bar" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 0%; min-width: 2%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                  <span id="progress-details">Aguardando...</span>
                </div>
              </div>
              <div id="progress-stats" class="mt-2 small text-muted"></div>
              <div id="memory-info" class="mt-2 small d-none">
                <i class="bi bi-memory"></i> <span id="memory-info-text">SharedArrayBuffer ativo</span>
              </div>
            </div>

            <div id="clusters-section" class="d-none">
              <div class="mb-4">
                <div class="analise-card analise-card-grafico">
                  <div class="analise-grafico-header">
                    <h6 class="mb-0"><i class="bi bi-geo-alt-fill me-2"></i>Clusters</h6>
                  </div>
                  <div class="analise-grafico-body">
                    <div class="grafico-wrapper">
                      <canvas id="grafico-clusters"></canvas>
                    </div>
                  </div>
                </div>
              </div>
              <div id="clusters-container" class="analise-clusters-lista"></div>
            </div>
          </div>
        </div>
      </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    <script type="module" src="/js/controllers/controladorCidade.js"></script>
    <script>
      (function() {
        const statusDiv = document.getElementById('shared-memory-status');
        const statusText = document.getElementById('memory-status-text');
        const kDisplay = document.getElementById('k-display');
        const kInput = document.getElementById('k-input');
        const timeEstimateText = document.getElementById('time-estimate-text');
        const timeEstimate = document.getElementById('time-estimate');
        const citiesInput = document.getElementById('cities-input');

        if (statusDiv && statusText) {
          const crossOriginIsolated = typeof window !== 'undefined' && window.crossOriginIsolated === true;
          const temSharedArrayBuffer = typeof SharedArrayBuffer !== 'undefined';
          if (crossOriginIsolated && temSharedArrayBuffer) {
            try {
              const sab = new SharedArrayBuffer(64);
              const view = new Int32Array(sab);
              Atomics.store(view, 0, 1);
              statusDiv.className = 'analise-status-memoria status-ok';
              statusText.innerHTML = 'Memória Compartilhada Ativa';
            } catch (e) {
              statusDiv.className = 'analise-status-memoria status-warn';
              statusText.innerHTML = 'SharedArrayBuffer com limitações';
            }
          } else {
            statusDiv.className = 'analise-status-memoria status-warn';
            statusText.innerHTML = 'Fallback (postMessage)';
          }
        }

        if (kInput && kDisplay) kInput.addEventListener('input', () => { kDisplay.textContent = kInput.value || '5'; });
        if (citiesInput) {
          const kpiColetar = document.getElementById('kpi-coletar');
          const syncKpi = () => {
            const v = parseInt(citiesInput.value, 10) || 5000;
            if (kpiColetar) kpiColetar.textContent = v >= 1000 ? (v/1000) + 'k' : v;
          };
          citiesInput.addEventListener('input', syncKpi);
          citiesInput.addEventListener('change', syncKpi);
          syncKpi();
        }
      })();
    </script>
  </body>
</html>
